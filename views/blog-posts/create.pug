extends layout

block content
  form#createPostForm
    input(type="text", name="title", placeholder="Title", required)
    input(type="text", name="author", placeholder="Author", required)
    textarea(name="content", placeholder="Content", required)
    button(type="submit") Create

  script.
    document.getElementById("createPostForm").addEventListener("submit", async (e) => {
      e.preventDefault(); // Stop default form submission

      // Collect form values manually
      const title = document.querySelector("input[name='title']").value;
      const author = document.querySelector("input[name='author']").value;
      const content = document.querySelector("textarea[name='content']").value;

      // Send data as JSON
      const response = await fetch("/create", {
        method: "POST",
        headers: {
          "Content-Type": "application/json", // Ensure Express can parse it
          "Accept": "application/json"
        },
        body: JSON.stringify({ title, author, content }) // Convert form data to JSON
      });

      const data = await response.json();
      if (data.success) {
        window.location.href = data.redirectUrl; // Redirect to home page
      } else {
        alert(data.message); // Show error if creation fails
      }
    });
